@inherits LayoutComponentBase


<MudThemeProvider IsDarkMode="true" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView Roles="Administrator, User">
   <Authorized>
    <MudLayout>
        <MudAppBar Elevation="1" Dense="true">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />

            <MudSpacer />


            <div Class="d-flex justify-end align-center flex-grow-1 gap-4">
              
                <MudAvatar Size="Size.Medium">
                    <MudImage Src="images/mony.jpg"></MudImage>
                </MudAvatar>
              @*   <MudText Typo="Typo.subtitle2"> @context.User.Identity.Name</MudText> *@
                    <MudMenu Label="@context.User.Identity.Name" Variant="Variant.Text" Color="Color.Secondary" ActivationEvent="@MouseEvent.MouseOver">
                        <ChildContent>
                            <MudMenuItem>Profile</MudMenuItem>
                            <MudMenuItem>Theme</MudMenuItem>
                            <MudMenuItem>Usage</MudMenuItem>
                            <MudMenuItem>Sign Out</MudMenuItem>
                        </ChildContent>
                    </MudMenu>
               

                <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
            </div>

        </MudAppBar>

        <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
            <MudDrawerHeader Style="">
                <MudImage Src="image/logo_white_xl.png" Width="200" Height="80"></MudImage>
            </MudDrawerHeader>

            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-6">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
    </Authorized>
    <NotAuthorized>
        <KAST.Pages.Auth.Login></KAST.Pages.Auth.Login>
    </NotAuthorized>

</AuthorizeView>
    



@code {
    bool _drawerOpen = true;
    private MudTheme _theme = new MudTheme
    {
            PaletteDark = new PaletteDark()
            {
                Primary = "rgba(0, 106,172, 1)",
                Surface = "rgba(29, 29, 80, 1)",
            },
    };
    private bool _isDarkMode;

    protected override void OnInitialized()
    {
        _theme.LayoutProperties.DefaultBorderRadius = "0";
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}