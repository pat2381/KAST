@page "/Mission/MissionOverview"

<PageTitle>Mission Overview</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Mission Overview</MudText>
<MudText Class="mb-8">This component demonstrates fetching data from the server.</MudText>




<MudLayout Class="d-flex justify-start flex-grow-1 gap-4" Elevation="0">
    <MudCard Class="rounded-lg">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Secondary">I</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">Istra Croatia</MudText>
                <MudText Typo="Typo.body2">Peninsula in Europe</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardMedia Image="image/mission/19.jpg" Height="250" />
        <MudCardContent>
            <MudText Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
        </MudCardContent>
        <MudCardActions>

            <MudButton Variant="Variant.Text" Color="Color.Secondary">Anmelden</MudButton>
            <MudSpacer/>
            <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />


        </MudCardActions>
    </MudCard>

    <MudCard Class="rounded-lg">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudBadge Color="Color.Error" Icon="@Icons.Material.Filled.Remove" Overlap="true" Bordered="true">
                    <MudAvatar Color="Color.Secondary">I</MudAvatar>
                </MudBadge>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">Istra Croatia</MudText>
                <MudText Typo="Typo.body2">Peninsula in Europe</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardMedia Class="object-contain" Image="image/mission/19.jpg" Height="250" />
        <MudCardContent>
            <MudText Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudTooltip Text="Zur Mission anmelden">
                <MudButton Variant="Variant.Text" Color="Color.Primary">Anmelden</MudButton>
            </MudTooltip>
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
            <MudTooltip Text="Download Mission">
                <MudIconButton Icon="@Icons.Material.Filled.Download" Color="Color.Success"  />
            </MudTooltip>

        </MudCardActions>
    </MudCard>

</MudLayout>




